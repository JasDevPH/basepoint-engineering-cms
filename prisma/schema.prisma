// FILE: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String           @id @default(cuid())
  slug            String           @unique
  title           String
  description     String?          @db.Text
  contentBlocks   Json?
  showVariantsTable Boolean        @default(true)
  imageUrl        String?
  category        String?
  categoryOrder   Int?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  // Pricing
  basePrice       Float?           // Base price for all variants (optional)
  priceType       String           @default("base") // "base" or "variant"
  
  // Auto-generate variant fields
  autoGenerate    Boolean          @default(false)
  capacities      String?
  capacityUnit    String?          @default("tons")
  lengths         String?
  lengthUnit      String?          @default("ft")
  connectionStyles String?
  customFields      Json? 
  
  // ðŸ†• STRIPE PAYMENT INTEGRATION
  stripePaymentLink String?        // Stripe payment link URL
  
  // LEMON SQUEEZY INTEGRATION
  lemonSqueezyProductId   String?  @unique
  lemonSqueezyStoreId     String?
  lemonSqueezyStatus      String?  @default("draft") // draft, published
  syncedAt                DateTime?
  
  variants        ProductVariant[]
  orders          Order[]
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  modelNumber String?
  capacity    String?
  length      String?
  endConnection String?
  customFields  Json?
  
  // Additional specs for table
  maxSpread   String?
  minSpread   String?
  headroom    String?
  unitWeight  String?
  
  price       Float?   // Custom price per variant (optional)
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // LEMON SQUEEZY INTEGRATION
  lemonSqueezyVariantId   String?  @unique
  lemonSqueezyPrice       Int?     // Price in cents
  syncedAt                DateTime?
  
  orders      OrderItem[]
  
  @@index([productId])
}

model Blog {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String   @db.Text  // Keep for backward compatibility
  contentBlocks Json?   // New: structured content blocks
  excerpt     String?
  imageUrl    String?
  author      String?
  featured    Boolean  @default(false)
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  excerpt       String?   @db.Text
  icon          String?   // Icon name from Lucide React
  order         Int?      // Display order in navigation
  contentBlocks Json?     // Block-based content
  published     Boolean   @default(true)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Order {
  id                    String      @id @default(cuid())
  orderNumber           String      @unique

  // Customer info
  customerEmail         String
  customerName          String?

  // Product reference (optional - may not be linked for external orders)
  productId             String?
  product               Product?    @relation(fields: [productId], references: [id])

  // Payment provider data (one of these will be set)
  lemonSqueezyOrderId   String?     @unique
  lemonSqueezyCustomerId String?
  stripeSessionId       String?     @unique  // Stripe Checkout Session ID
  stripePaymentIntentId String?     @unique  // Stripe Payment Intent ID
  stripeCustomerId      String?              // Stripe Customer ID

  // Payment source identifier
  paymentProvider       String      @default("lemonsqueezy") // "lemonsqueezy" or "stripe"

  // Order details
  status                String      @default("paid") // paid, processing, delivered, refunded, failed
  totalAmount           Float       // Total in dollars
  currency              String      @default("USD")

  // Timestamps
  paidAt                DateTime?
  deliveredAt           DateTime?
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  // Order items (products/variants purchased)
  items                 OrderItem[]

  // Status history tracking
  statusHistory         OrderStatusHistory[]

  // Custom data from webhook
  metadata              Json?

  @@index([customerEmail])
  @@index([status])
  @@index([lemonSqueezyOrderId])
  @@index([stripeSessionId])
  @@index([paymentProvider])
}

model OrderItem {
  id              String          @id @default(cuid())
  orderId         String
  order           Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Product variant reference
  variantId       String?
  variant         ProductVariant? @relation(fields: [variantId], references: [id])
  
  // Snapshot of product at time of purchase
  productName     String
  variantName     String?
  price           Float
  quantity        Int             @default(1)
  
  createdAt       DateTime        @default(now())
  
  @@index([orderId])
  @@index([variantId])
}

model OrderStatusHistory {
  id         String   @id @default(cuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  fromStatus String
  toStatus   String
  changedAt  DateTime @default(now())

  @@index([orderId])
}